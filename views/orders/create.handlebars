<h1>Crear Orden</h1>

{{#if error}}
  <div class="message message-error">{{error}}</div>
{{/if}}

<form action="/orders/create" method="POST">
  <div>
    <label for="title">Producto</label>
    <input type="text" name="items[0][title]" required>
  </div>

  <div>
    <label for="qty">Cantidad</label>
    <input type="number" name="items[0][qty]" min="1" required>
  </div>

  <div>
    <label for="unitPrice">Precio Unitario</label>
    <input type="number" name="items[0][unitPrice]" min="0" step="0.01" required>
  </div>

  <input type="hidden" name="items[0][productId]" value="6534f1a1b2c3d4e5f6a7b8c9">

  <button type="submit">Crear Orden</button>
</form>
